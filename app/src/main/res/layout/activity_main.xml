<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="5dp"
    android:paddingStart="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="3dp"
    android:paddingEnd="3dp"
    android:paddingRight="5dp"
    android:textAlignment="center"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoTurismo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/listViewTurismo"
        app:layout_constraintEnd_toEndOf="@+id/guiaTurismo"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/guiaTurismo"
        app:layout_constraintTop_toBottomOf="@+id/guiaTurismo"
        app:srcCompat="@raw/banner_horizontal" />

    <TextView
        android:id="@+id/guiaTurismo"
        android:layout_width="373dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="AGENCIAS DE VIAJES EN  DE QUEVEDO"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/logoTurismo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269" />

    <ListView
        android:id="@+id/listViewTurismo"
        android:layout_width="327dp"
        android:layout_height="305dp"
        android:layout_marginBottom="60dp"
        android:hint="Guia Turistica - Quevedo :)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>